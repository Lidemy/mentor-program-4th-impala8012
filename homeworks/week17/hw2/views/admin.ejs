<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('template/head') %>
  </head>
  <body>
    <%- include('template/navbar') %>
    <div class="background">
      <div class="prize__admin">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">獎項</th>
              <th scope="col">獎品</th>
              <th scope="col">圖片網址</th>
              <th scope="col">權重</th>
              <th scope="col">設定</th>
            </tr>
          </thead>
          <tbody>
            <% prizes.forEach(function(prize) { %>
            <tr>
              <th scope="row"><%= prize.name %></th>
              <td><%= prize.content %></td>
              <td><%= prize.imgURL %></td>
              <td><%= prize.probability %></td>
              <td>
                <a class="admin-prize__btn" href="/edit-prize/<%= prize.id %>">編輯</a>
                <a class="admin-prize__btn" href="/delete-prize/<%= prize.id %>">刪除</a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <div class="add__prize">
          <a class="btn btn-primary" href="/add-prize" role="button">新增獎項</a>
        </div>
      </div>
    </div>
    <%- include('template/footer') %>
    <script src="./index.js"></script>
  </body>
</html>
